<div class="container mt-5">
    <div class="text-center border-bottom mb-5 pb-3">
        <h2 class="fw-bold">Bank Account Details</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- EDIT FORM -->
            <form asp-action="Edit" method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Iban" class="form-label"></label>
                        <input asp-for="Iban" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DailyLimit" class="form-label"></label>
                        <input asp-for="DailyLimit" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Currency" class="form-label"></label>
                        <input asp-for="Currency" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaximumPerTransaction" class="form-label"></label>
                        <input asp-for="MaximumPerTransaction" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MaximumNrTransactions" class="form-label"></label>
                        <input asp-for="MaximumNrTransactions" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mt-4">
                            <input asp-for="IsBlocked" class="form-check-input" />
                            <label asp-for="IsBlocked" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="MainPage" asp-action="Index" class="btn btn-outline-primary">Back</a>
                </div>
            </form>

            <!-- DELETE FORM -->
            <form asp-action="Delete" method="post" class="text-center mt-3">
                <input type="hidden" name="iban" value="@Model.Iban" />
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this account?');">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
