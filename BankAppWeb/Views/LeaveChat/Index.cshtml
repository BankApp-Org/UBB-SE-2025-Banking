@model BankAppWeb.Models.LeaveChatViewModel

@{
    ViewData["Title"] = "Leave Chat";
}

@* In the chat view or chat list view, add a button that links to the Leave Chat page:
    <a href="@Url.Action("Index", "LeaveChat", new { chatId = chat.ChatId })" class="btn btn-outline-warning btn-sm">
        <i class="fas fa-sign-out-alt"></i> Leave Chat
    </a>
*@

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Leave Chat</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="alert alert-warning">
                        <p class="mb-0">Are you sure you want to leave <strong>@Model.ChatName</strong>?</p>
                        <p class="mt-2 mb-0">You will no longer receive messages from this chat.</p>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <form asp-action="Confirm" method="post">
                            <input type="hidden" name="chatId" value="@Model.ChatId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-sign-out-alt"></i> Confirm
                            </button>
                        </form>
                        <a asp-controller="ChatList" asp-action="Index" asp-route-chatId="@Model.ChatId" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
