@model BankAccountDeleteModel

@{
    ViewData["Title"] = "Delete Bank Account";
}

<div class="container mt-5">
    <div class="text-center border-bottom mb-4 pb-2">
        <h2 class="fw-bold">Delete Bank Account</h2>
    </div>

    <div class="text-center mb-4">
        <h4>Are you sure you want to delete this bank account?</h4>
        <p class="text-muted">IBAN: <strong>@Model.IBAN</strong></p>
        <p class="text-danger">This action is cannot be undone!</p>
    </div>

    <form asp-action="DeleteConfirmed" asp-controller="BankAccountDelete" method="post" class="text-center">
        <input type="hidden" name="iban" value="@Model.IBAN"/>
        <button type="submit" class="btn btn-danger me-3">Yes, delete</button>
        <a asp-controller="HomePage" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>