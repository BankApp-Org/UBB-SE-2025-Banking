                                        Command="{Binding DataContext.ReportMessageCommand, ElementName=chatMessagesView}"
                                                CommandParameter="{Binding}"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </DataTemplate>

