<Window
    x:Class="BankAppDesktop.Views.Pages.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BankAppDesktop.Views.Pages"
    Title="Report Issue">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Report an Issue" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Category Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Select Category:" 
                       Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryComboBox"
                      Width="Auto"
                      SelectionChanged="CategoryComboBox_SelectionChanged"
                      HorizontalAlignment="Stretch"
                      ItemsSource="{Binding ReportReasons}"
                      SelectedItem="{Binding SelectedReportReason, Mode=TwoWay}">
            </ComboBox>
        </StackPanel>

        <!-- Other Reason Text Box -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock x:Name="OtherReasonLabel" 
                       Text="Please Specify:" 
                       Margin="0,0,0,5"
                       Visibility="{Binding IsOtherCategorySelected, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            <TextBox x:Name="OtherReasonTextBox"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Visibility="{Binding IsOtherCategorySelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                     Text="{Binding OtherReason, Mode=TwoWay}"/>
        </StackPanel>

        <!-- Space Filler -->
        <Grid Grid.Row="3"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="80"
                    Margin="0,0,10,0"/>
            <Button Content="Submit"
                    Command="{Binding SubmitCommand}"
                    Width="80"
                    Background="#0078D7"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 